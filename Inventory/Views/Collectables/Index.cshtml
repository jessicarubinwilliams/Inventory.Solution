@{
  Layout = "_Layout";
}

@using Inventory.Models;
@model List<Inventory.Models.Collectible>;

<h1>Collectables</h1>

@if (@Model.Count == 0)
{
  <h3>No collectables have been added yet!</h3>
} 

@foreach (Collectible collectible in Model)
{
  <li>@Html.ActionLink($"{collectible.Name}", "Details", new { id = collectible.CollectibleId }) | @collectible.Collection.Name </li>
}

<p>@Html.ActionLink("Add new collectible", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>