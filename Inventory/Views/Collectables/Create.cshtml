@{
  Layout = "_Layout";
}

@model Inventory.Models.Collectible

<h4>Add a new collectible</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    
    @Html.LabelFor(model => model.Quantity)
    @Html.TextBoxFor(model => model.Quantity)
    
    @Html.LabelFor(model => model.Collection)
    @Html.DropDownList("CollectionId")
    
    <input type="submit" value="Add new collectible" class="btn btn-default"/>
}
<p>@Html.ActionLink("Show all collectables", "Index")</p>